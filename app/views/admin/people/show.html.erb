<% page_title @person.name %>

<% content_for :title, @person.name %>
<% content_for :back_link, admin_people_path %>


<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <p class="govuk-body">
      <%= view_on_website_link_for @person, class: "govuk-link" %>
    </p>

  <%= render "govuk_publishing_components/components/button", {
    text: "Details",
    href: admin_person_path(@person),
  } %>

  <%= render "govuk_publishing_components/components/button", {
    text: "Translations",
    href: admin_person_translations_path(@person),
  } %>

  <%= render "govuk_publishing_components/components/button", {
    text: "Historical accounts",
    href: admin_person_historical_accounts_path(@person),
  } %>

  <% if @person.image_url %>
    <%= image_tag @person.image.url(:s300) %>
  <% end %>

  <%= render "govuk_publishing_components/components/heading", {
    text: @person.current_role_appointments.collect(&:role_name).to_sentence,
    heading_level: 2,
  } %>

  <%= render "govuk_publishing_components/components/heading", {
    text: "Biography",
    heading_level: 2,
  } %>

  <p class="govuk-body">
    <%= @person.biography %>
  </p>

  <%= render "govuk_publishing_components/components/button", {
    text: "Edit",
    href: edit_admin_person_path(@person),
  } %>

  <%= render "govuk_publishing_components/components/button", {
    text: "Delete",
    destructive: true,
    data: { confirm: 'Are you sure you want to delete this person?' }
  } %>

  </div>

</div>
