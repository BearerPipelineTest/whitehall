<% page_title "Featured items on " + @world_location.name %>

<%= content_tag_for(:div, @world_location) do %>
  <div class="world-location-header">
    <h1>
      <span class="name"><%= @world_location.name %></span>
    </h1>
    <p><%= link_to "View on website", Whitehall.url_maker.world_location_news_index_url(@world_location, {locale: params[:locale]}.merge(cachebust_url_options)) %></p>
  </div>
  <section class="world-location-details">
    <%= tab_navigation_for(@world_location) %>
    <%= render partial: 'admin/feature_lists/feature_list', locals: {feature_list: @feature_list, filter_by: [:title, :type, :world_location], maximum_featured_documents: @world_location.class::FEATURED_DOCUMENTS_DISPLAY_LIMIT} %>
  </section>
<% end %>
