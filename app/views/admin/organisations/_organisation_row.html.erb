<%
  prefix ||= nil
%>
<%= table.row do %>
  <%= table.cell (link_to(organisation.acronym, admin_organisation_path(organisation), title: "View #{organisation.acronym}", class: "govuk-link") if organisation.acronym.present?) %>
  <%= table.cell link_to(organisation.name, admin_organisation_path(organisation), title: "View #{organisation.name}", class: "govuk-link") %>
  <%= table.cell organisation.organisation_type.name %>
  <%= table.cell organisation.govuk_status %>
  <% links = capture do %>
    <%= link_to '[gov.uk]', organisation_path(organisation), class: "govuk-link" %>
    <% if organisation.govuk_status != 'live' %>
      <%= link_to '[current site]', organisation.url, class: "govuk-link" %>
    <% end %>
  <% end %>
  <%= table.cell links %>
<% end %>
