<%
  block_class ||= 'other-departments'
  block_id ||= false
  header_text ||= nil
%>

<div class="heading-block js-filter-block js-hide-department-children <%= block_class %>" <%= raw("id=\"#{block_id}\"") if block_id %>>
  <% if header_text %>
    <header class="type-heading">
      <h2 class="govuk-heading-l"><%= raw(header_text) %></h2>
    </header>
  <% end %>

  <div class="content">
    <ol class="govuk-list">
      <% organisations.each do |organisation| %>
        <%= render 'organisations/index_item_plain', organisation: organisation %>
      <% end %>
    </ol>
  </div>
</div>
