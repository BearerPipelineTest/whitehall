<% page_title t("email_signups.new.title") %>
<% page_class "email-signup-show" %>

<header class="block email-header">
  <div class="inner-block">
    <h1 class="govuk-heading-l"><%= t("email_signups.new.title") %></h1>
  </div>
</header>

<div class="block">
  <div class="inner-block">
    <p class="govuk-body">
      <%= t("email_signups.new.description") %>
    </p>

    <p class="govuk-body govuk-!-margin-bottom-8">
      <strong class="govuk-!-font-weight-bold"><%= @email_signup.name %></strong>
    </p>

    <%= form_for :email_signup, url: { action: "create" } do |form| %>
      <%= form.hidden_field :feed %>

      <%= render 'govuk_publishing_components/components/button', {
        text: 'Continue',
        margin_bottom: true,
      } %>
    <% end %>
  </div>
</div>
